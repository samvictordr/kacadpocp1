# Default environment variables for local development
# Copy this file to .env and modify as needed

# ==============================================================================
# APPLICATION
# ==============================================================================
APP_NAME="Academy Program"
APP_VERSION="0.1.0"
DEBUG=false

# ==============================================================================
# SECURITY (CHANGE THESE IN PRODUCTION!)
# ==============================================================================
SECRET_KEY="change-this-in-production-use-a-long-random-string"
JWT_SECRET_KEY="change-this-jwt-secret-in-production"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ==============================================================================
# CORS CONFIGURATION
# ==============================================================================
# Use "*" for development, or comma-separated origins for production
# Example: "https://yourapp.github.io,https://custom-domain.com"
CORS_ORIGINS="*"

# ==============================================================================
# DATABASE URLS - RENDER MANAGED SERVICES
# ==============================================================================
# When deploying to Render, these URLs are provided automatically.
# If set, these take precedence over the component variables below.
# 
# DATABASE_URL - PostgreSQL (Render provides this)
# Note: Render provides postgres:// URLs, which are auto-converted to 
# postgresql+asyncpg:// for SQLAlchemy async compatibility.
# SSL mode is automatically enabled for production.
# DATABASE_URL="postgresql://user:password@host:5432/dbname"
#
# MONGODB_URI - MongoDB Atlas connection string
# Get from MongoDB Atlas: Connect â†’ Connect your application
# Supports mongodb+srv:// scheme with automatic TLS
# MONGODB_URI="mongodb+srv://user:password@cluster.mongodb.net/academy_identity?retryWrites=true&w=majority"
#
# REDIS_URL - Redis (Render provides this for Redis add-on)
# Use rediss:// scheme for TLS connections (Render requires this)
# REDIS_URL="rediss://user:password@host:6379"

# ==============================================================================
# LOCAL DEVELOPMENT - COMPONENT VARIABLES
# ==============================================================================
# These are used when DATABASE_URL/MONGODB_URI/REDIS_URL are not set.
# Ideal for local Docker-based development.

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=academy
POSTGRES_PASSWORD=academy_secret
POSTGRES_DB=academy_db

# MongoDB
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DB=academy_identity
# Optional authentication (uncomment if needed)
# MONGO_USER=academy
# MONGO_PASSWORD=academy_secret

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# Optional authentication (uncomment if needed)
# REDIS_PASSWORD=redis_secret

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Token TTLs (seconds)
ATTENDANCE_QR_TTL=86400
STORE_TOKEN_TTL=86400

# Allowance defaults
DEFAULT_DAILY_ALLOWANCE=100.0
